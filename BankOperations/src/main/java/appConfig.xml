<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
<!-- For Spring to understand annotations -->
	<context:annotation-config />
	<!--  For @Components to be scannable-->
	<context:component-scan base-package="ibm.vasanthi.com.bo.ui"></context:component-scan>
	<context:component-scan base-package="ibm.vasanthi.com.bo.bean"></context:component-scan>
	<context:component-scan base-package="ibm.vasanthi.com.bo.service"></context:component-scan>
	<context:component-scan base-package="ibm.vasanthi.com.bo.dao"></context:component-scan>
</beans>